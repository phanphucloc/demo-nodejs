<html>

<head>
    <title>
        Hello EJS Template
    </title>
    <%- include('../../layout/home/head'); %>
    <link href="assets/css/login/style.css" rel="stylesheet" type="text/css">
</head>

<body>
    <%- include('../../layout/home/header'); %>

    <h1>
        Hello <%= username %>
    </h1>

    <div class="container">
        <div class="card mb-3">
            <div class="card-header">Login JSON</div>
            <div class="card-body text-secondary">
                <form id="login-json" method="POST" action="/api/login-json">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email address</label>
                        <input type="email" class="form-control" name="email" aria-describedby="emailHelp"
                            placeholder="Enter email">
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                            else.</small>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" class="form-control" name="password" placeholder="Password">
                    </div>
                    <button id="button-submit-json" type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="card mb-3">
            <div class="card-header">Login</div>
            <div class="card-body text-secondary">
                <form method="POST" action="/login">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email address</label>
                        <input type="email" class="form-control" name="email" aria-describedby="emailHelp"
                            placeholder="Enter email">
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                            else.</small>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" class="form-control" name="password" placeholder="Password">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>


    <script src="assets/js/login/login.js"></script>

    <%- include('../../layout/home/footer'); %>

</body>

</html>