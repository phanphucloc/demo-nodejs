<html>

<head>
    <title>
        Hello EJS Template
    </title>
    <link href="assets/style.css" rel="stylesheet" type="text/css">

    <!-- Load CDN -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
</head>

<body>
    <h1>
        Hello <%= username %>
    </h1>

    <form method="POST" action="/api/login">
        User Name : <input type="text" name="userName">
        <br>
        User Password : <input type="password" name="password">
        <br>
        <input type="submit" value="submit">
    </form>

    <form id="login-json" method="POST" action="/api/login-json">
        User Name : <input type="text" name="userName">
        <br>
        User Password : <input type="password" name="password">
        <br>
        <input type="submit" value="submit">
    </form>

    <script>

        $('#login-json').on('submit', function ( event ) {
            event.preventDefault();
            let userName = $('#login-json input[name=userName]').val();
            let password = $('#login-json input[name=password]').val();
            loginJson(userName, password)
        })

        function loginJson(userName, password) {
            $.ajax({
                type: 'POST',
                url: 'api/login-json',
                data: JSON.stringify({
                    userName,
                    password
                }),
                dataType: 'Json',
                contentType: 'application/json'
            })
        }
    </script>
</body>

</html>